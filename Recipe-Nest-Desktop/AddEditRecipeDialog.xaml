<Window x:Name="window" x:Class="RecipeNest.AddEditRecipeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add/Edit Recipe"
        Height="400"
        Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Black">

    <Grid Margin="20,20,20,23">
        <Grid.Background>
            <ImageBrush ImageSource="/b13.jpg"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Title -->
        <TextBlock Text="Add/Edit Recipe"
                   FontSize="36"
                   FontWeight="Bold"
                   Foreground="White"
                   Grid.Row="0"
                   Grid.ColumnSpan="2"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Item ID -->
        <TextBlock Text="Item ID:"
                   Foreground="white"
                   Grid.Row="1"
                   Grid.Column="0"
                   VerticalAlignment="Bottom"
                   Margin="25,10,50,10" FontSize="16" FontWeight="Bold"/>
        <TextBox x:Name="txtItemID"
                 Grid.Row="1"
                 Height="30"
                 Margin="26,5,53,5" Grid.Column="1"
                 GotFocus="TextBox_GotFocus"
                 LostFocus="TextBox_LostFocus"
                 Tag="Enter Item ID"/>

        <!-- Item Name -->
        <TextBlock Text="Item Name:"
                   Foreground="White"
                   Grid.Row="2"
                   Grid.Column="0"
                   VerticalAlignment="Center"
                   Margin="25,10,50,10" FontSize="16" FontWeight="Bold"/>
        <TextBox x:Name="txtItemName"
                 Grid.Row="2"
                 Height="30"
                 Margin="25,10,50,10" Grid.Column="1"
                 GotFocus="TextBox_GotFocus"
                 LostFocus="TextBox_LostFocus"
                 Tag="Enter Item Name"/>

        <!-- Date -->
        <TextBlock Text="Date:"
                   Foreground="White"
                   Grid.Row="3"
                   Grid.Column="0"
                   VerticalAlignment="Center"
                   Margin="25,10,50,10" FontSize="16" FontWeight="Bold"/>
        <TextBox x:Name="txtDate"
                 Grid.Row="3"
                 Height="30"
                 Margin="25,10,50,10" Grid.Column="1"
                 GotFocus="TextBox_GotFocus"
                 LostFocus="TextBox_LostFocus"
                 Tag="Enter Date (yyyy-MM-dd)"/>

        <!-- Category -->
        <TextBlock Text="Category:"
                   Foreground="White"
                   Grid.Row="4"
                   Grid.Column="0"
                   VerticalAlignment="Center"
                   Margin="25,10,50,10" FontSize="16" FontWeight="Bold"/>
        <TextBox x:Name="txtItemCategory"
                 Grid.Row="4"
                 Height="30"
                 Margin="25,10,50,10" Grid.Column="1"
                 GotFocus="TextBox_GotFocus"
                 LostFocus="TextBox_LostFocus"
                 Tag="Enter Category"/>

        <!-- Save Button -->
        <Button Content="Save"
                FontSize="22"
                Padding="10"
                Background="#FFFF8910"
                Foreground="White"
                BorderBrush="Transparent"
                Click="btnSave_Click"
                Grid.Row="5"
                HorizontalAlignment="Left"
                Margin="40,6,0,24"
                Width="158" Grid.Column="1" FontWeight="Bold"/>
    </Grid>
</Window>