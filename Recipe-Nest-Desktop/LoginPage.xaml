<Window x:Class="RecipeNest.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Black">
    <Grid>

        <!-- Background Image -->
        <Grid.Background>
            <ImageBrush ImageSource="H:\Recipe-Nest-Desktop\Recipe-Nest-Desktop\Recipe-Nest-Desktop\b12.jpg"
                Stretch="UniformToFill"/>
        </Grid.Background>
        <TextBlock Text="Welcome to the " 
            FontSize="60" 
            FontWeight="Bold" 
            HorizontalAlignment="Left" 
            Margin="37,13,0,329"
            Foreground="white"/>
        <TextBlock Text="RecipeNest" 
     FontSize="90" 
     FontWeight="Bold" 
     HorizontalAlignment="Left" 
     Margin="149,89,0,238"
     Foreground="white" RenderTransformOrigin="0.194,-0.499" FontFamily="Edwardian Script ITC" Width="390"/>








        <Border Width="502" Height="319" 
                Background="Black" 
                CornerRadius="20"
                Opacity="0.9"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="37,227,0,0">
            <StackPanel x:Name="stackPanel" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Center"
                        Width="350" 
                        Background="Black"
                        Opacity="0.9"
                        >

                <TextBlock Text="Login" 
                           FontSize="30" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,20"
                           Foreground="White"/>
                <TextBlock Text="Email" 
                           FontSize="18" 
                           Foreground="White"/>

                <!-- Username Field -->
                <TextBox x:Name="txtUsername" 
                         FontSize="14" 
                         Padding="8"
                         Background="White"
                         BorderBrush="Gray"
                         Width="320"/>

                <!-- Password Field -->
                <TextBlock Text="Password" 
                           FontSize="18" 
                           Foreground="White"
                           Margin="0,10,0,0"/>
                <PasswordBox x:Name="txtPassword" 
                             FontSize="14" 
                             Padding="8"
                             Background="White"
                             BorderBrush="Gray"
                             Width="320"/>

                <!-- Sign In Button -->
                <Button x:Name="btnLogin" 
                        Content="Login" 
                        FontSize="14" 
                        Padding="10" 
                        HorizontalAlignment="Stretch"
                        Background="Orange"
                        Foreground="White"
                        BorderBrush="Transparent"
                        Click="btnLogin_Click"
                        Margin="0,20,0,0"/>
                <!-- Sign Up Option -->
                <TextBlock FontSize="14" 
                           Foreground="White" 
                           HorizontalAlignment="Center" 
                           Margin="0,10,0,0">
                    <Run Text="Don't have an account? "/>
                    <Hyperlink NavigateUri="#" Click="btnSignup_Click" Foreground="Orange">
                        <Run Text="Sign up"/>
                    </Hyperlink>
                </TextBlock>







            </StackPanel>
        </Border>
    </Grid>
</Window>
