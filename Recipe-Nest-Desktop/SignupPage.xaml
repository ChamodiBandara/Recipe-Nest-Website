<Window x:Class="RecipeNest.SignupPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Signup" 
        Height="600" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Black">
    <Grid>
        <!-- Background image -->
        <Grid.Background>
            <ImageBrush ImageSource="C:\Users\Acer\Desktop\recipegit\Recipe-Nest-Desktop\RecipeNest\RecipeNest\src\images\b10.jpg"
                        Stretch="UniformToFill"/>
        </Grid.Background>

        <TextBlock Text="Create an Account" 
                   FontSize="40" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,40,0,0"
                   Foreground="Black"/>

        <!-- Signup -->
        <Border Width="644" Height="403" 
                Background="Black" 
                CornerRadius="20"
                Opacity="0.9"
                HorizontalAlignment="Center"
                VerticalAlignment="Top" Margin="0,111,0,0">
            <StackPanel VerticalAlignment="Center" 
                        HorizontalAlignment="Center"
                        Width="427"
                        Background="Black"
                        Opacity="0.9">

                <TextBlock Text="Email" 
                           FontSize="18" 
                           Foreground="White"/>
                <TextBox x:Name="txtSignupUsername" 
                         FontSize="14" 
                         Padding="8"
                         Background="White"
                         BorderBrush="Gray"
                         Width="428"/>

                <TextBlock Text="Password" 
                           FontSize="18" 
                           Foreground="White"
                           Margin="0,10,0,0"/>
                <PasswordBox x:Name="txtSignupPassword" 
                             FontSize="14" 
                             Padding="8"
                             Background="White"
                             BorderBrush="Gray"
                             Width="424"/>

                <TextBlock Text="Confirm Password" 
                           FontSize="18" 
                           Foreground="White"
                           Margin="0,10,0,0"/>
                <PasswordBox x:Name="txtConfirmPassword" 
                             FontSize="14" 
                             Padding="8"
                             Background="White"
                             BorderBrush="Gray"
                             Width="425"/>

                <Button x:Name="btnSignup" 
                        Content="Sign Up" 
                        FontSize="14" 
                        Padding="10" 
                        HorizontalAlignment="Stretch"
                        Background="Orange"
                        Foreground="White"
                        BorderBrush="Transparent"
                        Click="BtnSignup_Click"
                        Margin="0,20,0,0"/>

                <!-- Link Login  -->
                <Button Content="Already have an account? Login"
                        Background="Transparent"
                        Foreground="Yellow"
                        BorderBrush="Transparent"
                        FontSize="12"
                        Click="btnGoToLogin_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>