<Window x:Class="RecipeNest.HomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RecipeNest Admin Panel"
        Height="600"
        Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#fefae0">
    <Grid>


        <!--Menu -->
        <Border Width="200"
                Background="Black"
                Opacity="0.9"
                HorizontalAlignment="Left"
                VerticalAlignment="Stretch">
            <StackPanel Margin="10">
                <Button Content="Dashboard"
                        FontSize="16"
                        Padding="10"
                        Background="Orange"
                        Foreground="White"
                        BorderBrush="Transparent"
                        Click="btnDashboard_Click"
                        Margin="0,50,0,0"/>
                <Button Content="User Management"
                        FontSize="16"
                        Padding="10"
                        Background="orange"
                        Foreground="White"
                        BorderBrush="Transparent"
                        Click="btnUserManagement_Click"
                        Margin="0,25,0,10"/>
                <Button Content="Recipe Management"
                        FontSize="16"
                        Padding="10"
                        Background="Orange"
                        Foreground="White"
                        BorderBrush="Transparent"
                        Click="btnRecipeManagement_Click"
                        Margin="0,20,0,30"/>
                <Button Content="Logout"
                        FontSize="16"
                        Padding="10"
                        Background="Red"
                        Foreground="White"
                        BorderBrush="Transparent"
                        Click="btnLogout_Click"
                        />
            </StackPanel>
        </Border>

        <!-- Content Area -->
        <Frame x:Name="MainContentFrame"
               NavigationUIVisibility="Hidden"
               Margin="220,20,20,20"
               Background="Transparent"/>

        <!-- Dashboard  -->
        <StackPanel x:Name="DashboardPanel"
                    Margin="220,20,20,20"
                    Visibility="Visible">
            <TextBlock Text="Dashboard"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="Black"
                       Margin="0,0,0,20"/>
            <WrapPanel>
                <!-- Total Recipes -->
                <Border Background="Orange"
                        CornerRadius="10"
                        Padding="20"
                        Margin="0,0,20,20">
                    <StackPanel>
                        <TextBlock Text="Total Recipes"
                                   FontSize="16"
                                   Foreground="White"/>
                        <TextBlock x:Name="txtTotalRecipes"
                                   Text="0"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="White"/>
                    </StackPanel>
                </Border>
                <!-- Total Users -->
                <Border Background="Orange"
                        CornerRadius="10"
                        Padding="20"
                        Margin="0,0,20,20">
                    <StackPanel>
                        <TextBlock Text="Total Users"
                                   FontSize="16"
                                   Foreground="White"/>
                        <TextBlock x:Name="txtTotalUsers"
                                   Text="0"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="White"/>
                    </StackPanel>
                </Border>
                <!-- Activity -->
                <Border Background="Orange"
                        CornerRadius="10"
                        Padding="20"
                        Margin="0,0,20,20">
                    <StackPanel>
                        <TextBlock Text="Recent Activity"
                                   FontSize="16"
                                   Foreground="White"/>
                        <TextBlock x:Name="txtRecentActivity"
                                   Text="No recent activity"
                                   FontSize="14"
                                   Foreground="White"/>
                    </StackPanel>
                </Border>
            </WrapPanel>

            <!-- Recent Recipes -->
            <TextBlock Text="Recent Recipes"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="Black"
                       Margin="0,20,0,10"/>
            <ListView x:Name="lstRecentRecipes"
                      Background="White"
                      BorderBrush="Gray"
                      Height="150">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Recipe Name" DisplayMemberBinding="{Binding Name}" Width="200"/>
                        <GridViewColumn Header="Date Added" DisplayMemberBinding="{Binding DateAdded}" Width="150"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
    </Grid>
</Window>